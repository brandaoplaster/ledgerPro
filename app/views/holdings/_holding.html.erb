<tr id="<%= dom_id(holding) %>" class="hover:bg-gray-50 transition-colors duration-150">
  <td class="px-6 py-5 whitespace-nowrap">
    <div class="flex items-center">
      <span class="inline-flex items-center px-4 py-1.5 rounded-full text-base font-bold bg-yellow-100 text-yellow-800">
        <%= holding.instrument.ticker %>
      </span>
    </div>
  </td>
  <td class="px-6 py-5">
    <div class="text-base font-semibold text-gray-900"><%= holding.instrument.name %></div>
    <div class="text-sm text-gray-500 capitalize"><%= holding.instrument.kind&.humanize %></div>
  </td>
  <td class="px-6 py-5 whitespace-nowrap text-right">
    <div class="text-base font-semibold text-gray-900">
      <%= number_with_precision(holding.quantity, precision: 8, strip_insignificant_zeros: true) %>
    </div>
  </td>
  <td class="px-6 py-5 whitespace-nowrap text-right">
    <div class="text-base font-semibold text-gray-900">
      <%= number_to_currency(holding.average_price, unit: "$", precision: 2) %>
    </div>
  </td>
  <td class="px-6 py-5 whitespace-nowrap text-right">
    <div class="text-base font-bold text-green-600">
      <%= number_to_currency(holding.quantity * holding.average_price, unit: "$", precision: 2) %>
    </div>
  </td>
  <td class="px-6 py-5 whitespace-nowrap">
    <div class="flex items-center justify-center gap-3">
      <%= link_to edit_wallet_holding_path(@wallet, holding),
                  class: "inline-flex items-center gap-2 px-4 py-2.5 bg-gray-800 hover:bg-gray-900 text-white text-sm font-semibold rounded-lg transition-colors duration-200 shadow-sm hover:shadow-md",
                  data: { turbo_frame: "modal" } do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Edit
      <% end %>

      <%= button_to wallet_holding_path(@wallet, holding),
                    method: :delete,
                    form: { data: { turbo_confirm: "Are you sure you want to delete this holding?" }, class: "contents" },
                    class: "inline-flex items-center gap-2 px-4 py-2.5 bg-orange-600 hover:bg-orange-700 text-white text-sm font-semibold rounded-lg transition-colors duration-200 shadow-sm hover:shadow-md" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
        Delete
      <% end %>
    </div>
  </td>
</tr>
