<div class="w-full px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-10">
    <div>
      <h1 class="text-4xl font-bold text-gray-900 mb-2">My Instruments</h1>
      <p class="text-gray-600">Manage your investment instruments</p>
    </div>

    <%= link_to new_instrument_path,
                class: "inline-flex items-center justify-center gap-2 bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-3 px-6 rounded-lg shadow-lg hover:shadow-xl transition-all duration-200",
                data: { turbo_frame: "modal" } do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
      </svg>
      New Instrument
    <% end %>
  </div>

  <%= turbo_frame_tag "modal" %>

  <% if @instruments.any? %>
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full divide-y divide-gray-200">
          <thead class="bg-gradient-to-r from-yellow-400 to-yellow-500">
            <tr>
              <th scope="col" class="w-1/6 px-6 py-4 text-left text-sm font-bold text-white uppercase tracking-wider">
                Ticker
              </th>
              <th scope="col" class="w-2/6 px-6 py-4 text-left text-sm font-bold text-white uppercase tracking-wider">
                Name
              </th>
              <th scope="col" class="w-1/6 px-6 py-4 text-left text-sm font-bold text-white uppercase tracking-wider">
                Type
              </th>
              <th scope="col" class="w-1/6 px-6 py-4 text-left text-sm font-bold text-white uppercase tracking-wider">
                Created At
              </th>
              <th scope="col" class="w-1/6 px-6 py-4 text-center text-sm font-bold text-white uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody id="instruments" class="bg-white divide-y divide-gray-200">
            <%= render @instruments %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <div class="text-center py-12">
      <div class="inline-block p-6 bg-gray-100 rounded-full mb-4">
        <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-gray-700 mb-2">No instruments registered yet</h3>
      <p class="text-gray-500 mb-6">Start by creating your first instrument!</p>
      <%= link_to new_instrument_path,
                  class: "inline-flex items-center gap-2 bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-3 px-6 rounded-lg shadow-lg hover:shadow-xl transition-all duration-200",
                  data: { turbo_frame: "modal" } do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
        Create First Instrument
      <% end %>
    </div>
  <% end %>
</div>
