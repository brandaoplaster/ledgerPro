<%= form_with(model: instrument, class: "space-y-4") do |form| %>
  <% if instrument.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded">
      <h3 class="font-bold mb-2"><%= pluralize(instrument.errors.count, "error") %> found:</h3>
      <ul class="list-disc list-inside">
        <% instrument.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Instrument Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :name,
                        class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-yellow-500 focus:border-yellow-500",
                        placeholder: "e.g. Apple Inc.",
                        autofocus: true %>
  </div>

  <div>
    <%= form.label :ticker, "Ticker Symbol", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :ticker,
                        class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-yellow-500 focus:border-yellow-500 uppercase",
                        placeholder: "e.g. AAPL, BTC, PETR4" %>
  </div>

  <div>
    <%= form.label :kind, "Instrument Type", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.select :kind,
                    [
                      ["Stock", "stock"],
                      ["Cryptocurrency", "crypto"],
                      ["ETF", "etf"],
                      ["Bond", "bond"],
                      ["Real Estate", "real_estate"],
                      ["Commodity", "commodity"],
                      ["Other", "other"]
                    ],
                    { include_blank: "Select a type" },
                    class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-yellow-500 focus:border-yellow-500" %>
  </div>

  <div class="flex gap-3 pt-4">
    <%= form.submit "Save",
                    class: "flex-1 bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>

    <%= link_to "Cancel",
                instruments_path,
                class: "flex-1 bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded text-center",
                data: { turbo_frame: "_top" } %>
  </div>
<% end %>
