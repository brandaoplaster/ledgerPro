<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
    <!-- Total Wallets -->
    <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
          </svg>
        </div>
        <div class="text-right">
          <p class="text-xs font-medium text-gray-500 uppercase">Wallets</p>
        </div>
      </div>
      <p class="text-3xl font-bold text-gray-900 mb-2"><%= @total_wallets %></p>
      <div class="flex items-center space-x-3 text-sm">
        <span class="text-green-600"><%= @active_wallets %> active</span>
        <span class="text-gray-400"><%= @inactive_wallets %> inactive</span>
      </div>
    </div>

    <!-- Total Invested -->
    <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="text-right">
          <p class="text-xs font-medium text-gray-500 uppercase">Invested</p>
        </div>
      </div>
      <p class="text-2xl font-bold text-gray-900 mb-2">
        <%= number_to_currency(@total_invested, unit: "R$ ", separator: ",", delimiter: ".") %>
      </p>
      <p class="text-xs text-gray-500">Allocated capital</p>
    </div>

    <!-- Current Value -->
    <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
          </svg>
        </div>
        <div class="text-right">
          <p class="text-xs font-medium text-gray-500 uppercase">Portfolio</p>
        </div>
      </div>
      <p class="text-2xl font-bold text-gray-900 mb-2">
        <%= number_to_currency(@total_current_value, unit: "R$ ", separator: ",", delimiter: ".") %>
      </p>
      <p class="text-xs text-gray-500">Market value</p>
    </div>

    <!-- Profit/Loss -->
    <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="w-12 h-12 <%= @total_profit_loss >= 0 ? 'bg-green-100' : 'bg-red-100' %> rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 <%= @total_profit_loss >= 0 ? 'text-green-600' : 'text-red-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
        <div class="text-right">
          <p class="text-xs font-medium text-gray-500 uppercase">Return</p>
        </div>
      </div>
      <p class="text-2xl font-bold <%= @total_profit_loss >= 0 ? 'text-green-600' : 'text-red-600' %> mb-2">
        <%= number_to_currency(@total_profit_loss, unit: "R$ ", separator: ",", delimiter: ".") %>
      </p>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold <%= @total_profit_loss >= 0 ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
        <%= @total_profit_loss >= 0 ? "↑" : "↓" %>
        <%= number_to_percentage(@total_profit_loss_percentage.abs, precision: 2, separator: ",", delimiter: ".") %>
      </span>
    </div>
  </div>

  <!-- Charts Section -->
  <% if @wallets.any? %>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-10">
      <!-- Chart: Portfolio Distribution -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-6 flex items-center">
          <div class="w-8 h-8 bg-yellow-100 rounded-lg flex items-center justify-center mr-2">
            <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"></path>
            </svg>
          </div>
          Portfolio Distribution
        </h3>
        <div class="space-y-4">
          <% max_value = @wallet_distribution.values.max.to_f %>
          <% colors = ["#EAB308", "#84CC16", "#06B6D4", "#8B5CF6", "#EC4899"] %>
          <% @wallet_distribution.each_with_index do |(name, value), index| %>
            <% percentage = max_value > 0 ? (value / max_value * 100) : 0 %>
            <div>
              <div class="flex justify-between items-center mb-1">
                <span class="text-sm font-semibold text-gray-700"><%= name %></span>
                <span class="text-sm font-bold text-gray-900"><%= number_to_currency(value, unit: "R$ ", separator: ",", delimiter: ".") %></span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden">
                <div class="h-3 rounded-full transition-all duration-500" style="width: <%= percentage %>%; background-color: <%= colors[index % colors.length] %>;"></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Chart: Invested vs Current -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-6 flex items-center">
          <div class="w-8 h-8 bg-yellow-100 rounded-lg flex items-center justify-center mr-2">
            <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          Invested vs Current
        </h3>
        <div class="space-y-5">
          <% max_comparison = @wallet_comparison_data.values.flat_map(&:values).max.to_f %>
          <% @wallet_comparison_data.each do |name, data| %>
            <div>
              <div class="text-sm font-semibold text-gray-700 mb-2"><%= name %></div>
              <div class="space-y-2">
                <% data.each do |label, value| %>
                  <% percentage = max_comparison > 0 ? (value / max_comparison * 100) : 0 %>
                  <div class="flex items-center gap-2">
                    <span class="text-xs text-gray-500 w-16"><%= label == 'Investido' ? 'Invested' : 'Current' %></span>
                    <div class="flex-1 bg-gray-200 rounded-full h-2.5">
                      <div class="h-2.5 rounded-full transition-all duration-500 <%= label == 'Investido' ? 'bg-green-500' : 'bg-yellow-500' %>" style="width: <%= percentage %>%;"></div>
                    </div>
                    <span class="text-xs font-semibold text-gray-900 w-20 text-right"><%= number_to_currency(value, unit: "R$ ", separator: ",", delimiter: ".", precision: 0) %></span>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Chart: Buys vs Sells -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-6 flex items-center">
          <div class="w-8 h-8 bg-yellow-100 rounded-lg flex items-center justify-center mr-2">
            <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
            </svg>
          </div>
          Trading Volume
        </h3>
        <div class="flex items-center justify-center">
          <% total_ops = @buy_vs_sell.values.sum.to_f %>
          <% buy_percentage = total_ops > 0 ? (@buy_vs_sell["Buys"] / total_ops * 100) : 50 %>
          <% sell_percentage = 100 - buy_percentage %>
          
          <div class="relative w-48 h-48">
            <!-- Pizza Chart with CSS -->
            <div class="w-full h-full rounded-full relative overflow-hidden" style="background: conic-gradient(#10B981 0% <%= buy_percentage %>%, #EF4444 <%= buy_percentage %>% 100%);">
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="bg-white rounded-full w-24 h-24 flex items-center justify-center">
                  <span class="text-2xl font-bold text-gray-900"><%= total_ops.to_i %></span>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="mt-6 space-y-2">
          <div class="flex items-center justify-between p-3 bg-green-50 rounded-lg">
            <div class="flex items-center gap-2">
              <div class="w-4 h-4 bg-green-500 rounded"></div>
              <span class="text-sm font-semibold text-gray-700">Buys</span>
            </div>
            <div class="text-right">
              <span class="text-lg font-bold text-gray-900"><%= @buy_vs_sell["Buys"] %></span>
              <span class="text-xs text-gray-500 ml-2">(<%= number_to_percentage(buy_percentage, precision: 1) %>)</span>
            </div>
          </div>
          <div class="flex items-center justify-between p-3 bg-red-50 rounded-lg">
            <div class="flex items-center gap-2">
              <div class="w-4 h-4 bg-red-500 rounded"></div>
              <span class="text-sm font-semibold text-gray-700">Sells</span>
            </div>
            <div class="text-right">
              <span class="text-lg font-bold text-gray-900"><%= @buy_vs_sell["Sells"] %></span>
              <span class="text-xs text-gray-500 ml-2">(<%= number_to_percentage(sell_percentage, precision: 1) %>)</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Chart: Top 5 Assets -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-6 flex items-center">
          <div class="w-8 h-8 bg-yellow-100 rounded-lg flex items-center justify-center mr-2">
            <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
          </div>
          Top 5 Assets by Value
        </h3>
        <div class="space-y-4">
          <% max_instrument_value = @top_instruments.values.max.to_f %>
          <% @top_instruments.each_with_index do |(ticker, value), index| %>
            <% percentage = max_instrument_value > 0 ? (value / max_instrument_value * 100) : 0 %>
            <div>
              <div class="flex justify-between items-center mb-2">
                <div class="flex items-center gap-2">
                  <span class="inline-flex items-center justify-center w-6 h-6 bg-yellow-100 text-yellow-600 rounded font-bold text-xs">
                    <%= index + 1 %>
                  </span>
                  <span class="text-sm font-bold text-gray-900"><%= ticker %></span>
                </div>
                <span class="text-sm font-semibold text-gray-700"><%= number_to_currency(value, unit: "R$ ", separator: ",", delimiter: ".") %></span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2.5">
                <div class="bg-yellow-500 h-2.5 rounded-full transition-all duration-500" style="width: <%= percentage %>%;"></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Wallets Table -->
  <div class="bg-white rounded-lg shadow-md overflow-hidden mb-10">
    
    <% if @wallets.any? %>
      <div class="overflow-x-auto">
        <table class="w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Name</th>
              <th class="px-6 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-center text-xs font-bold text-gray-700 uppercase tracking-wider">Holdings</th>
              <th class="px-6 py-3 text-center text-xs font-bold text-gray-700 uppercase tracking-wider">Transactions</th>
              <th class="px-6 py-3 text-right text-xs font-bold text-gray-700 uppercase tracking-wider">Invested</th>
              <th class="px-6 py-3 text-right text-xs font-bold text-gray-700 uppercase tracking-wider">Current Value</th>
              <th class="px-6 py-3 text-center text-xs font-bold text-gray-700 uppercase tracking-wider">Strategy</th>
              <th class="px-6 py-3 text-center text-xs font-bold text-gray-700 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @wallet_summaries.each do |summary| %>
              <% wallet = summary[:wallet] %>
              <% profit_loss = summary[:current_value] - summary[:total_invested] %>
              <% profit_percentage = summary[:total_invested].zero? ? 0 : ((profit_loss / summary[:total_invested]) * 100) %>
              <tr class="hover:bg-gray-50 transition-colors duration-150">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="w-10 h-10 bg-yellow-100 rounded-lg flex items-center justify-center text-yellow-600 font-bold mr-3">
                      <%= wallet.name[0].upcase %>
                    </div>
                    <div class="text-sm font-bold text-gray-900"><%= wallet.name %></div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-3 inline-flex text-xs leading-5 font-semibold rounded-full <%= wallet.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                    <%= wallet.status.titleize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-semibold text-gray-900">
                  <%= summary[:holdings_count] %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-semibold text-gray-900">
                  <%= summary[:transactions_count] %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-semibold text-gray-900">
                  <%= number_to_currency(summary[:total_invested], unit: "R$ ", separator: ",", delimiter: ".") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <div class="text-sm font-semibold text-gray-900">
                    <%= number_to_currency(summary[:current_value], unit: "R$ ", separator: ",", delimiter: ".") %>
                  </div>
                  <% if profit_loss != 0 %>
                    <div class="text-xs <%= profit_loss >= 0 ? 'text-green-600' : 'text-red-600' %>">
                      <%= profit_loss >= 0 ? "+" : "" %><%= number_to_percentage(profit_percentage, precision: 1) %>
                    </div>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center">
                  <% if summary[:has_strategy] %>
                    <span class="inline-flex items-center px-2.5 py-1 bg-green-100 text-green-700 rounded-lg text-xs font-semibold">
                      ✓ Yes
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-1 bg-gray-100 text-gray-500 rounded-lg text-xs font-semibold">
                      ✗ No
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center">
                  <%= link_to wallet_path(wallet), class: "inline-flex items-center gap-1 bg-yellow-500 hover:bg-yellow-600 text-white text-xs font-bold py-2 px-4 rounded-lg shadow hover:shadow-lg transition-all duration-200" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                    View
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="inline-block p-6 bg-gray-100 rounded-full mb-4">
          <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-700 mb-2">You don't have any wallets yet</h3>
        <p class="text-gray-500 mb-6">Get started by creating your first investment portfolio!</p>
        <%= link_to new_wallet_path, class: "inline-flex items-center gap-2 bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-3 px-6 rounded-lg shadow-lg hover:shadow-xl transition-all duration-200" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          Create first wallet
        <% end %>
      </div>
    <% end %>
  </div>
</div>