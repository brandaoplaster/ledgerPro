<div class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-black flex items-center justify-center p-4">

  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-20 left-10 w-72 h-72 bg-yellow-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-yellow-400/5 rounded-full blur-3xl"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-blue-900/10 rounded-full blur-3xl"></div>
  </div>

  <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>

  <div class="w-full max-w-md px-6 relative z-10">
    <div class="bg-white/95 backdrop-blur-sm rounded-2xl shadow-2xl overflow-hidden border border-gray-200/50">

      <div class="bg-gradient-to-r from-yellow-400 to-yellow-500 px-8 py-10 relative overflow-hidden">
        <div class="absolute inset-0 bg-black/5"></div>
        <div class="relative z-10">
          <div class="flex items-center justify-center mb-3">
            <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h1 class="text-3xl font-bold text-white text-center mb-2">Ledger Pro</h1>
          <p class="text-yellow-50 text-center text-sm font-medium">Investment Portfolio Management</p>
        </div>
      </div>

      <div class="px-8 py-10">
        <h2 class="text-2xl font-bold text-gray-900 mb-2 text-center">Welcome back</h2>
        <p class="text-gray-600 text-center mb-8 text-sm">Sign in to manage your portfolio</p>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>

          <div>
            <%= f.label :email, "Email", class: "block text-sm font-semibold text-gray-900 mb-2" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
                </svg>
              </div>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",
                  class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent text-gray-900 transition-all",
                  placeholder: "your@email.com" %>
            </div>
          </div>

          <div>
            <%= f.label :password, "Password", class: "block text-sm font-semibold text-gray-900 mb-2" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                </svg>
              </div>
              <%= f.password_field :password, autocomplete: "current-password",
                  class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent text-gray-900 transition-all",
                  placeholder: "••••••••" %>
            </div>
          </div>

          <div class="flex items-center justify-between">
            <% if devise_mapping.rememberable? %>
              <div class="flex items-center">
                <%= f.check_box :remember_me, class: "h-4 w-4 text-yellow-500 focus:ring-yellow-500 border-gray-300 rounded cursor-pointer" %>
                <%= f.label :remember_me, "Remember me", class: "ml-2 block text-sm text-gray-700 cursor-pointer" %>
              </div>
            <% end %>

            <% if devise_mapping.recoverable? %>
              <%= link_to "Forgot password?", new_password_path(resource_name),
                  class: "text-sm font-semibold text-yellow-600 hover:text-yellow-700 transition-colors" %>
            <% end %>
          </div>

          <div>
            <%= f.submit "Sign in", class: "w-full bg-gradient-to-r from-yellow-500 to-yellow-600 hover:from-yellow-600 hover:to-yellow-700 text-white font-bold py-3.5 px-4 rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 cursor-pointer transform hover:scale-[1.02] active:scale-[0.98]" %>
          </div>
        <% end %>

        <div class="mt-8 mb-6 flex items-center">
          <div class="flex-1 border-t border-gray-300"></div>
          <span class="px-4 text-sm text-gray-500 font-medium">or</span>
          <div class="flex-1 border-t border-gray-300"></div>
        </div>

        <% if devise_mapping.registerable? %>
          <div class="text-center">
            <p class="text-gray-600 text-sm">
              Don't have an account?
              <%= link_to "Sign up", new_registration_path(resource_name),
                  class: "font-bold text-gray-900 hover:text-yellow-600 transition-colors ml-1" %>
            </p>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mt-8 text-center">
      <p class="text-gray-400 text-sm">
        Secure investment portfolio tracking
      </p>
      <div class="flex items-center justify-center gap-4 mt-3 text-xs text-gray-500">
        <span>© 2025 Ledger Pro</span>
      </div>
    </div>
  </div>
</div>
