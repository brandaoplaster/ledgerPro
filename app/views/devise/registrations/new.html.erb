<div class="fixed inset-0 bg-gradient-to-br from-gray-900 via-gray-800 to-black flex items-center justify-center p-4">

  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-20 left-10 w-72 h-72 bg-yellow-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-yellow-400/5 rounded-full blur-3xl"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-blue-900/10 rounded-full blur-3xl"></div>
  </div>

  <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>

  <div class="w-full max-w-md px-6 relative z-10">
    <div class="bg-white/95 backdrop-blur-sm rounded-2xl shadow-2xl overflow-hidden border border-gray-200/50">

      <div class="bg-gradient-to-r from-yellow-400 to-yellow-500 px-8 py-6 relative overflow-hidden">
        <div class="absolute inset-0 bg-black/5"></div>
        <div class="relative z-10">
          <div class="flex items-center justify-center mb-2">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
            </svg>
          </div>
          <h1 class="text-2xl font-bold text-white text-center mb-1">Ledger Pro</h1>
          <p class="text-yellow-50 text-center text-xs font-medium">Investment Portfolio Management</p>
        </div>
      </div>

      <div class="px-8 py-6">
        <h2 class="text-xl font-bold text-gray-900 mb-1 text-center">Create your account</h2>
        <p class="text-gray-600 text-center mb-6 text-sm">Start managing your investment portfolio</p>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div>
            <%= f.label :name, "Name", class: "block text-sm font-semibold text-gray-900 mb-2" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
              <%= f.text_field :name, autofocus: true, autocomplete: "name",
                  class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent text-gray-900 transition-all",
                  placeholder: "Your name" %>
            </div>
          </div>

          <div>
            <%= f.label :email, "Email", class: "block text-sm font-semibold text-gray-900 mb-2" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
                </svg>
              </div>
              <%= f.email_field :email, autocomplete: "email",
                  class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent text-gray-900 transition-all",
                  placeholder: "your@email.com" %>
            </div>
          </div>

          <div>
            <%= f.label :password, class: "block text-sm font-semibold text-gray-900 mb-2" do %>
              Password
              <% if @minimum_password_length %>
                <span class="text-gray-500 font-normal text-xs">(<%= @minimum_password_length %> characters minimum)</span>
              <% end %>
            <% end %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                </svg>
              </div>
              <%= f.password_field :password, autocomplete: "new-password",
                  class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent text-gray-900 transition-all",
                  placeholder: "Create a strong password" %>
            </div>
          </div>

          <div>
            <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-semibold text-gray-900 mb-2" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                </svg>
              </div>
              <%= f.password_field :password_confirmation, autocomplete: "new-password",
                  class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent text-gray-900 transition-all",
                  placeholder: "Confirm your password" %>
            </div>
          </div>

          <div class="pt-2">
            <%= f.submit "Create Account", class: "w-full bg-gradient-to-r from-yellow-500 to-yellow-600 hover:from-yellow-600 hover:to-yellow-700 text-white font-bold py-3 px-4 rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 cursor-pointer transform hover:scale-[1.02] active:scale-[0.98]" %>
          </div>
        <% end %>

        <div class="mt-6 mb-4 flex items-center">
          <div class="flex-1 border-t border-gray-300"></div>
          <span class="px-4 text-sm text-gray-500 font-medium">or</span>
          <div class="flex-1 border-t border-gray-300"></div>
        </div>

        <div class="text-center pb-2">
          <p class="text-gray-600 text-sm">
            Already have an account?
            <%= link_to "Sign in", new_session_path(resource_name),
                class: "font-bold text-gray-900 hover:text-yellow-600 transition-colors ml-1" %>
          </p>
        </div>
      </div>
    </div>

    <div class="mt-6 text-center">
      <p class="text-gray-400 text-sm">
        Join thousands of investors tracking their portfolios
      </p>
      <div class="flex items-center justify-center gap-4 mt-2 text-xs text-gray-500">
        <span>Â© 2025 Ledger Pro</span>
      </div>
    </div>
  </div>
</div>
