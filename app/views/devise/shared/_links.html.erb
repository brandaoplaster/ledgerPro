<div class="space-y-3 text-center">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Log in", new_session_path(resource_name),
        class: "block text-sm font-semibold text-gray-800 hover:text-yellow-500 transition-colors duration-200" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Sign up", new_registration_path(resource_name),
        class: "block text-sm font-semibold text-gray-800 hover:text-yellow-500 transition-colors duration-200" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name),
        class: "block text-sm font-semibold text-gray-800 hover:text-yellow-500 transition-colors duration-200" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name),
        class: "block text-sm text-gray-600 hover:text-gray-800 transition-colors duration-200" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name),
        class: "block text-sm text-gray-600 hover:text-gray-800 transition-colors duration-200" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider),
          data: { turbo: false },
          class: "mt-4 w-full inline-flex justify-center items-center py-3 px-4 border-2 border-gray-800 rounded-lg bg-white text-sm font-semibold text-gray-800 hover:bg-gray-50 transition-all duration-200" %>
    <% end %>
  <% end %>
</div>
